---
/**
 * Weather Page - Displays weather for specific coordinates
 * This is a separate page to handle dynamic coordinates from URL params
 */

import BaseLayout from "../layouts/BaseLayout.astro";
import WeatherIcon from "../components/WeatherIcon.astro";
import HourlyForecast from "../islands/HourlyForecast";
import LocationSearch from "../islands/LocationSearch";
import AutoLocation from "../islands/AutoLocation";
import { fetchCompleteWeather } from "../services/weather.service";
import { formatTemp, formatLastUpdated } from "../utils/format";
import type { Location } from "../types/weather";

// Get location from URL parameters
const url = new URL(Astro.request.url);
const lat = url.searchParams.get("lat");
const lon = url.searchParams.get("lon");
const locationName = url.searchParams.get("name");

// If no location provided, redirect to home
if (!lat || !lon) {
  return Astro.redirect("/");
}

// Use coordinates from URL
const currentLocation: Location = {
  id: `${lat}-${lon}`,
  name: decodeURIComponent(locationName || "Current Location"),
  coord: {
    lat: parseFloat(lat),
    lon: parseFloat(lon),
  },
};

// Fetch real weather data from OpenWeatherMap API
let weatherData;
try {
  weatherData = await fetchCompleteWeather(currentLocation);
} catch (e) {
  console.error("Failed to fetch weather:", e);
  return Astro.redirect("/");
}

const { location, current, hourly } = weatherData;
---

<BaseLayout title={`Weather in ${location.name} - ClimaWiki`}>
  <main class="min-h-screen pb-20">
    {/* Header with Location Info */}
    <header class="px-4 py-6">
      <div class="flex items-center justify-between mb-4">
        {/* Auto Location Button */}
        <AutoLocation client:load />

        {/* Location Display */}
        <div class="flex-1 text-center">
          <div class="flex items-center justify-center gap-2">
            <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <h1 class="text-lg font-medium uppercase tracking-wide">
              {location.name}
            </h1>
          </div>
          <p class="text-sm text-gray-400 mt-1">
            {formatLastUpdated(current.updatedAt)}
          </p>
        </div>

        {/* Saved Locations Link */}
        <a 
          href="/saved"
          class="p-2 rounded-full hover:bg-white/10 transition-colors"
          aria-label="Saved locations"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
          </svg>
        </a>
      </div>

      {/* Search Bar */}
      <LocationSearch client:load />
    </header>

    {/* Main Weather Display */}
    <section class="px-4 py-8 text-center">
      {/* Weather Icon */}
      <div class="mb-6 flex justify-center">
        <WeatherIcon icon={current.icon} size="xl" />
      </div>

      {/* Temperature */}
      <div class="temp-display mb-4">
        {formatTemp(current.temp)}
      </div>

      {/* Condition */}
      <p class="text-2xl text-gray-300 mb-2">
        {current.condition}
      </p>

      {/* High / Low */}
      <p class="text-lg text-gray-400">
        H: {formatTemp(current.tempMax)} &nbsp; L: {formatTemp(current.tempMin)}
      </p>
    </section>

    {/* Key Metrics Cards */}
    <section class="px-4 mb-8">
      <div class="grid grid-cols-3 gap-3">
        {/* Feels Like */}
        <div class="glass rounded-2xl p-4 text-center">
          <svg class="w-8 h-8 mx-auto mb-2 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <p class="text-xs text-gray-400 mb-1 uppercase tracking-wide">Feels Like</p>
          <p class="text-2xl font-semibold">{formatTemp(current.feelsLike)}</p>
        </div>

        {/* Wind */}
        <div class="glass rounded-2xl p-4 text-center">
          <svg class="w-8 h-8 mx-auto mb-2 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
          <p class="text-xs text-gray-400 mb-1 uppercase tracking-wide">Wind</p>
          <p class="text-2xl font-semibold">{current.wind.speed}</p>
          <p class="text-xs text-gray-400">km/h</p>
        </div>

        {/* Rain */}
        <div class="glass rounded-2xl p-4 text-center">
          <svg class="w-8 h-8 mx-auto mb-2 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
          </svg>
          <p class="text-xs text-gray-400 mb-1 uppercase tracking-wide">Rain</p>
          <p class="text-2xl font-semibold">{current.precipitation}</p>
          <p class="text-xs text-gray-400">%</p>
        </div>
      </div>
    </section>

    {/* Hourly Forecast */}
    <section class="mb-8">
      <HourlyForecast 
        hourlyData={hourly} 
        locationLat={currentLocation.coord.lat}
        locationLon={currentLocation.coord.lon}
        locationName={currentLocation.name}
        client:load 
      />
    </section>

    {/* Additional Info Cards */}
    <section class="px-4 mb-8 grid grid-cols-2 gap-3">
      {/* Humidity */}
      <div class="glass rounded-2xl p-4">
        <div class="flex items-center gap-2 mb-2">
          <svg class="w-5 h-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
          </svg>
          <p class="text-xs text-gray-400 uppercase tracking-wide">Humidity</p>
        </div>
        <p class="text-2xl font-semibold">{current.humidity}%</p>
      </div>

      {/* Pressure */}
      <div class="glass rounded-2xl p-4">
        <div class="flex items-center gap-2 mb-2">
          <svg class="w-5 h-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
          <p class="text-xs text-gray-400 uppercase tracking-wide">Pressure</p>
        </div>
        <p class="text-2xl font-semibold">{current.pressure}</p>
        <p class="text-xs text-gray-400">hPa</p>
      </div>
    </section>

    {/* Bottom Navigation */}
    <nav class="fixed bottom-0 left-0 right-0 bg-slate-900/90 backdrop-blur-lg border-t border-white/10 px-4 py-3">
      <div class="flex items-center justify-around max-w-2xl mx-auto">
        <a href="/welcome" class="flex flex-col items-center gap-1 text-blue-400">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
          </svg>
          <span class="text-xs font-medium">Home</span>
        </a>

        <a href="/map" class="flex flex-col items-center gap-1 text-gray-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
          </svg>
          <span class="text-xs">Map</span>
        </a>

        <a href="/saved" class="flex flex-col items-center gap-1 text-gray-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
          </svg>
          <span class="text-xs">Saved</span>
        </a>

        <a href="/settings" class="flex flex-col items-center gap-1 text-gray-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-xs">Settings</span>
        </a>
      </div>
    </nav>
  </main>
</BaseLayout>
